<%- include ./layouts/head.ejs %>
<%- include ./layouts/header.ejs %>

<body data-is-admin-user="<%= isAdminUser %>" data-is-user-logged-in="<%= isUserLoggedIn %>">

<main class="detalle-container">

  <div class="card 
      <%= producto.calidad_original ? 'calidad-original-fitam' : '' %> 
      <%= producto.calidad_vic ? 'calidad_vic' : '' %> 
      <%= producto.oferta ? 'producto-oferta' : '' %>"
      data-label="<%= producto.oferta ? 'OFERTA' : producto.calidad_original ? 'CALIDAD FITAM' : producto.calidad_vic ? 'CALIDAD VIC' : '' %>">

      <div class="cover-card">
        <% if (producto.imagenes && producto.imagenes.length > 0) { %>
          <div class="carousel-container">
            <button class="carousel__button" onclick="moverCarruselDetalle(-1)">
              <i class="fas fa-chevron-left"></i>
            </button>

            <div class="carousel-wrapper">
              <div class="carousel" id="carousel-detalle">
                <% producto.imagenes.forEach((imagen, i) => { %>
                  <img class="carousel__image <%= i !== 0 ? 'hidden' : '' %>" src="/uploads/productos/<%= imagen.imagen %>" alt="<%= producto.nombre %>">
                <% }) %>
              </div>
            </div>

            <button class="carousel__button" onclick="moverCarruselDetalle(1)">
              <i class="fas fa-chevron-right"></i>
            </button>
          </div>
        <% } %>
      </div>

      <div class="titulo-producto">
        <h3 class="nombre"><%= producto.nombre %></h3>
      </div>

      <hr>

      <div class="categoria-producto">
        <h6 class="categoria"><%= producto.categoria_nombre || "Sin categorÃ­a" %></h6>
      </div>

      <div class="precio-producto">
        <p class="precio">
          <%= new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(producto.precio_venta || 0) %>
        </p>
      </div>

      <% const descAplic = (producto.descripcion || '').trim(); %>
      <% if (descAplic) { %>
        <hr>
        <div class="descripcion-producto" style="text-align:left;margin-top:10px;">
          <h6 style="margin:0 0 8px 0;font-weight:800;">Aplicaciones</h6>
          <pre style="white-space:pre-wrap;margin:0;line-height:1.35;"><%= descAplic %></pre>
        </div>
      <% } %>

      <% if (isUserLoggedIn) { %>
        <% if (isAdminUser) { %>
          <div class="stock-producto <%= producto.stock_actual >= producto.stock_minimo ? 'suficiente-stock' : 'bajo-stock' %>">
            <p>Stock Disponible: <%= producto.stock_actual %></p>
          </div>
        <% } else { %>
          <div class="semaforo-stock">
            <i class="fa-solid fa-thumbs-<%= producto.stock_actual >= producto.stock_minimo ? 'up verde' : 'down rojo' %>"></i>
            <span class="texto-semaforo">
              <%= producto.stock_actual >= producto.stock_minimo ? "PRODUCTO DISPONIBLE PARA ENTREGA INMEDIATA" : "PRODUCTO PENDIENTE DE INGRESO O A PEDIDO" %>
            </span>
          </div>
        <% } %>
      <% } %>

  </div>

</main>

<%- include ./layouts/footer.ejs %>

<script src="/js/detalle.js"></script>
<style>
/* =========================
   Aplicaciones (Escobillas)
========================= */
.acciones-aplicaciones{
  margin: 10px 0 6px;
  display:flex;
  justify-content:center;
}

.btn-aplicaciones{
  width: 100%;
  max-width: 360px;
  display:flex;
  align-items:center;
  justify-content:center;
  gap:10px;
  padding: 11px 14px;
  border-radius: 14px;
  border: 1px solid rgba(0,0,0,.10);
  background: rgba(255,255,255,.92);
  backdrop-filter: blur(6px);
  cursor:pointer;
  font-weight: 800;
  letter-spacing: .2px;
  transition: transform .08s ease, box-shadow .12s ease;
}
.btn-aplicaciones:hover{
  transform: translateY(-1px);
  box-shadow: 0 12px 26px rgba(0,0,0,.12);
}
.btn-aplicaciones i{ font-size: 15px; }

.apps-hint{
  max-width: 420px;
  margin: 8px auto 0;
  display:flex;
  gap:10px;
  align-items:flex-start;
  opacity: .9;
  font-size: 13px;
  line-height: 1.3;
}
.apps-hint i{ margin-top: 2px; }

/* =========================
   SweetAlert2 custom modal
========================= */
.af-apps-modal.swal2-popup{
  border-radius: 18px;
  padding: 18px 18px 14px;
}
.af-apps-title{
  font-size: 18px;
  font-weight: 900;
  letter-spacing: .4px;
  text-transform: uppercase;
}
.af-apps-body{
  text-align: left;
  margin-top: 10px;
}
.af-apps-wrap{ width: 100%; }
.af-apps-subtitle{
  font-weight: 800;
  opacity: .75;
  margin-bottom: 10px;
}
.af-apps-ul{
  list-style: none;
  padding: 0;
  margin: 0;
  max-height: 52vh;
  overflow: auto;
  padding-right: 6px;
}
.af-apps-li{
  display:flex;
  gap:10px;
  padding: 9px 10px;
  border-radius: 12px;
}
.af-apps-li:nth-child(odd){
  background: rgba(0,0,0,.03);
}
.af-apps-ico{
  width: 22px;
  display:flex;
  justify-content:center;
  opacity: .75;
}
.af-apps-txt{
  flex:1;
  font-weight: 600;
  line-height: 1.25;
}
.af-apps-confirm.swal2-confirm{
  border-radius: 12px !important;
  padding: 10px 16px !important;
  font-weight: 900 !important;
}
</style>

</body>
</html>
