<script>
/* =========================
   Carrusel Detalle (fallback)
========================= */
(function(){
  const carrusel = document.getElementById('carousel-detalle');
  if(!carrusel) return;

  const imgs = Array.from(carrusel.querySelectorAll('.carousel__image'));
  const thumbsWrap = document.getElementById('thumbs-detalle');
  const thumbs = thumbsWrap ? Array.from(thumbsWrap.querySelectorAll('.detalle-thumb')) : [];
  let idx = Math.max(0, imgs.findIndex(img => !img.classList.contains('hidden')));

  function setActiveThumb(i){
    thumbs.forEach(b => b.classList.toggle('is-active', Number(b.dataset.idx) === i));
  }

  function show(i){
    if(!imgs.length) return;
    idx = (i + imgs.length) % imgs.length;
    imgs.forEach((img, n) => img.classList.toggle('hidden', n !== idx));
    setActiveThumb(idx);
  }

  // Si ya existe moverCarruselDetalle en /js/detalle.js, no lo pisamos.
  window.moverCarruselDetalle = window.moverCarruselDetalle || function(dir){
    show(idx + dir);
  };

  if(thumbs.length){
    thumbsWrap.addEventListener('click', (ev) => {
      const btn = ev.target.closest('.detalle-thumb');
      if(!btn) return;
      const i = Number(btn.dataset.idx);
      if(Number.isFinite(i)) show(i);
    }, { passive:true });
  }

  // Zoom al click sobre imagen
  carrusel.addEventListener('click', (ev) => {
    const img = ev.target.closest('img.carousel__image');
    if(!img) return;
    if(typeof Swal === 'undefined') return;

    Swal.fire({
      imageUrl: img.src,
      imageAlt: img.alt || 'Imagen',
      showConfirmButton: false,
      showCloseButton: true,
      width: 'min(980px, 96vw)',
      backdrop: true
    });
  }, { passive:true });

})();

/* =========================
   Modal Aplicaciones (UX)
========================= */
function _escapeHtml(str){
  return String(str ?? '')
    .replace(/&/g,'&amp;')
    .replace(/</g,'&lt;')
    .replace(/>/g,'&gt;')
    .replace(/"/g,'&quot;')
    .replace(/'/g,'&#39;');
}

function _normalizeAplicaciones(raw){
  let s = String(raw ?? '').trim();
  if (!s) return { subtitle: '', lines: [] };

  // limpieza adicional (por si queda algo)
  s = s
    .replace(/\\t/g,' ')
    .replace(/\t/g,' ')
    .replace(/\\n/g,'\n')
    .replace(/\r/g,'')
    .replace(/<br\s*\/?\s*>/gi, '\n')
    .replace(/<\/?[^>]+>/g,'')
    .replace(/"\s*>/g,'')
    .replace(/[ ]{2,}/g,' ')
    .trim();

  if (!s.includes('\n')) {
    const m = s.match(/\b[A-ZÁÉÍÓÚÑ]{2,}\b/);
    if (m && typeof m.index === 'number' && m.index > 0) {
      const subtitle = s.slice(0, m.index).trim();
      const rest = s.slice(m.index).trim().replace(/\s+(?=[A-ZÁÉÍÓÚÑ]{2,}\b)/g, '\n');
      s = subtitle + '\n' + rest;
    } else {
      s = s.replace(/\s{2,}/g, '\n');
    }
  }

  const lines = s.split('\n').map(x => x.trim()).filter(Boolean);
  let subtitle = '';
  if (lines.length >= 2 && /^(escobilla|kit|rear)/i.test(lines[0])) subtitle = lines.shift();
  return { subtitle, lines };
}

function _buildAplicacionesHtml(raw){
  const { subtitle, lines } = _normalizeAplicaciones(raw);

  const items = (lines || []).slice(0, 600).map(l => `
    <li class="af-apps-li">
      <span class="af-apps-ico"><i class="fa-solid fa-car"></i></span>
      <span class="af-apps-txt">${_escapeHtml(l)}</span>
    </li>
  `).join('');

  return `
    <div class="af-apps-wrap">
      ${subtitle ? `<div class="af-apps-subtitle">${_escapeHtml(subtitle)}</div>` : ''}
      <ul class="af-apps-ul">${items || '<li class="af-apps-li"><span class="af-apps-txt">Sin aplicaciones cargadas.</span></li>'}</ul>
    </div>
  `;
}

function mostrarAplicacionesModal(titulo, raw){
  const contenido = String(raw ?? '').trim();
  if (!contenido || typeof Swal === 'undefined') return;

  Swal.fire({
    title: titulo || 'Aplicaciones',
    html: _buildAplicacionesHtml(contenido),
    width: 'min(980px, 94vw)',
    showCloseButton: true,
    confirmButtonText: 'Cerrar',
    customClass: {
      popup: 'af-apps-modal',
      title: 'af-apps-title',
      htmlContainer: 'af-apps-body',
      confirmButton: 'af-apps-confirm'
    }
  });
}

document.addEventListener('click', (ev) => {
  const btn = ev.target.closest('#btnAppsDetalle');
  if (!btn) return;

  const titulo = (btn.dataset.titulo || 'Aplicaciones').toString();
  const rawEnc = (btn.dataset.aplicaciones || '').toString();

  let texto = '';
  try { texto = decodeURIComponent(rawEnc); } catch(_) { texto = rawEnc; }

  mostrarAplicacionesModal(titulo, texto);
}, { passive:true });
</script>

