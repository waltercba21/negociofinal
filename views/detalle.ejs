<%- include ./layouts/header.ejs %>

<body data-is-admin-user="<%= isAdminUser %>" data-is-user-logged-in="<%= isUserLoggedIn %>">

<style>
/* =========================
   DETALLE - Layout Pro (v2)
========================= */
.detalle-page{
  max-width: 1180px;
  margin: 26px auto 40px;
  padding: 0 14px;
}

.detalle-shell{
  background: rgba(255,255,255,.92);
  border: 1px solid rgba(0,0,0,.08);
  border-radius: 22px;
  box-shadow: 0 24px 60px rgba(0,0,0,.16);
  overflow: hidden;
}

.detalle-grid{
  display: grid;
  grid-template-columns: 1.2fr .8fr;
  gap: 0;
}

.detalle-left{
  padding: 18px;
  border-right: 1px solid rgba(0,0,0,.06);
  background: linear-gradient(180deg, rgba(255,255,255,.9), rgba(255,255,255,.75));
}

.detalle-right{
  padding: 18px 18px 16px;
}

.detalle-badges{
  display:flex;
  gap:10px;
  align-items:center;
  flex-wrap:wrap;
  margin-bottom: 10px;
}

.badge-soft{
  display:inline-flex;
  align-items:center;
  gap:8px;
  padding: 6px 10px;
  border-radius: 999px;
  border: 1px solid rgba(0,0,0,.10);
  background: rgba(255,255,255,.85);
  font-weight: 900;
  font-size: 12px;
  letter-spacing: .2px;
  text-transform: uppercase;
  opacity: .95;
}

.badge-soft i{ opacity: .8; }

.detalle-title{
  font-size: 28px;
  font-weight: 1000;
  line-height: 1.08;
  letter-spacing: .4px;
  text-transform: uppercase;
  margin: 6px 0 10px;
}

.detalle-price{
  font-size: 32px;
  font-weight: 1000;
  margin: 8px 0 14px;
}

.detalle-sep{
  height: 1px;
  background: rgba(0,0,0,.08);
  margin: 12px 0;
}

/* =========================
   Galería grande + thumbs
========================= */
.detalle-galeria{
  position: relative;
}

.detalle-galeria .carousel-container{
  border-radius: 18px;
  overflow: hidden;
  border: 1px solid rgba(0,0,0,.08);
  background: rgba(0,0,0,.02);
}

/* Forzamos alto del contenedor/carrusel (por si el CSS global lo achica) */
.detalle-galeria .carousel-wrapper,
.detalle-galeria .carousel{
  height: 520px !important;
  background: #f4f6f8;
  display:flex;
  align-items:center;
  justify-content:center;
}

.detalle-galeria .carousel__image{
  width: 100%;
  height: 520px !important;
  max-height: 520px !important;
  object-fit: contain;
  display: block;
  background: #f4f6f8;
}

/* Botones */
.detalle-galeria .carousel__button{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 3;
  width: 44px;
  height: 44px;
  border-radius: 12px;
  border: 1px solid rgba(0,0,0,.12);
  background: rgba(255,255,255,.92);
  backdrop-filter: blur(6px);
  cursor: pointer;
  display:flex;
  align-items:center;
  justify-content:center;
  box-shadow: 0 12px 26px rgba(0,0,0,.12);
}
.detalle-galeria .carousel__button:hover{ filter: brightness(1.03); }
.detalle-galeria .carousel__button i{ font-size: 16px; }
.detalle-galeria .carousel__button--left{ left: 12px; }
.detalle-galeria .carousel__button--right{ right: 12px; }

.detalle-thumbs{
  margin-top: 10px;
  display:flex;
  gap: 8px;
  overflow:auto;
  padding-bottom: 4px;
}
.detalle-thumb{
  width: 70px;
  height: 70px;
  border-radius: 14px;
  border: 1px solid rgba(0,0,0,.10);
  background: rgba(255,255,255,.85);
  display:flex;
  align-items:center;
  justify-content:center;
  cursor:pointer;
  flex: 0 0 auto;
  transition: transform .08s ease, box-shadow .12s ease;
}
.detalle-thumb:hover{
  transform: translateY(-1px);
  box-shadow: 0 12px 26px rgba(0,0,0,.10);
}
.detalle-thumb img{
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 14px;
}
.detalle-thumb.is-active{
  outline: 2px solid rgba(0,0,0,.35);
  outline-offset: 2px;
}

/* =========================
   Aplicaciones (preview + botón)
========================= */
.apps-card{
  border: 1px solid rgba(0,0,0,.10);
  border-radius: 16px;
  background: rgba(255,255,255,.92);
  padding: 12px 12px 10px;
}

.apps-head{
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:10px;
  margin-bottom: 8px;
}
.apps-title{
  display:flex;
  gap:10px;
  align-items:center;
  font-weight: 1000;
  letter-spacing: .2px;
  text-transform: uppercase;
  font-size: 13px;
  opacity: .92;
}
.apps-title i{ opacity:.75; }

.btn-aplicaciones{
  display:inline-flex;
  align-items:center;
  justify-content:center;
  gap:10px;
  padding: 10px 12px;
  border-radius: 14px;
  border: 1px solid rgba(0,0,0,.12);
  background: rgba(255,255,255,.92);
  backdrop-filter: blur(6px);
  cursor:pointer;
  font-weight: 1000;
  letter-spacing: .2px;
  transition: transform .08s ease, box-shadow .12s ease;
  white-space: nowrap;
}
.btn-aplicaciones:hover{
  transform: translateY(-1px);
  box-shadow: 0 12px 26px rgba(0,0,0,.12);
}
.btn-aplicaciones i{ font-size: 15px; }

.apps-preview{
  list-style:none;
  padding:0;
  margin:0;
  display:grid;
  gap: 8px;
}
.apps-item{
  display:flex;
  gap:10px;
  padding: 9px 10px;
  border-radius: 12px;
  background: rgba(0,0,0,.03);
}
.apps-item i{
  width: 18px;
  margin-top: 1px;
  opacity: .7;
}
.apps-item span{
  font-weight: 700;
  line-height: 1.25;
  opacity: .9;
}

.apps-more{
  margin-top: 8px;
  font-size: 13px;
  opacity: .8;
  font-weight: 800;
  display:flex;
  gap:8px;
  align-items:center;
}
.apps-more i{ opacity:.7; }

.desc-block{
  margin-top: 6px;
}
.desc-title{
  font-weight:1000;
  margin-bottom: 6px;
  opacity:.9;
  text-transform: uppercase;
  font-size: 13px;
  letter-spacing: .2px;
}
.desc-text{
  white-space: pre-line;
  font-weight:650;
  opacity:.85;
  line-height: 1.35;
}

/* =========================
   SweetAlert2 custom modal
========================= */
.af-apps-modal.swal2-popup{
  border-radius: 18px;
  padding: 18px 18px 14px;
}
.af-apps-title{
  font-size: 18px;
  font-weight: 1000;
  letter-spacing: .4px;
  text-transform: uppercase;
}
.af-apps-body{ text-align:left; margin-top:10px; }
.af-apps-wrap{ width:100%; }
.af-apps-subtitle{
  font-weight: 900;
  opacity: .75;
  margin-bottom: 10px;
}
.af-apps-ul{
  list-style:none;
  padding:0;
  margin:0;
  max-height: 56vh;
  overflow:auto;
  padding-right:6px;
}
.af-apps-li{
  display:flex;
  gap:10px;
  padding: 9px 10px;
  border-radius: 12px;
}
.af-apps-li:nth-child(odd){ background: rgba(0,0,0,.03); }
.af-apps-ico{ width:22px; display:flex; justify-content:center; opacity:.75; }
.af-apps-txt{ flex:1; font-weight:650; line-height:1.25; }
.af-apps-confirm.swal2-confirm{
  border-radius: 12px !important;
  padding: 10px 16px !important;
  font-weight: 1000 !important;
}

/* =========================
   Responsive mínimo
========================= */
@media (max-width: 980px){
  .detalle-grid{ grid-template-columns: 1fr; }
  .detalle-left{ border-right: none; border-bottom: 1px solid rgba(0,0,0,.06); }
  .detalle-galeria .carousel-wrapper,
  .detalle-galeria .carousel{ height: 420px !important; }
  .detalle-galeria .carousel__image{ height: 420px !important; max-height: 420px !important; }
}
</style>

<%
  // Limpieza fuerte para que NO se vea "\t", "\\t", "\\n", tags, etc.
  const _raw = (producto.descripcion || '').toString();

  const _cleanDescripcion = _raw
    .replace(/\\t/g, ' ')
    .replace(/\t/g, ' ')
    .replace(/\\n/g, '\n')
    .replace(/\r/g, '')
    .replace(/<br\s*\/?\s*>/gi, '\n')
    .replace(/<\/?[^>]+>/g, '')
    .replace(/"\s*>/g, '')        // arregla casos tipo: "B">
    .replace(/\u00A0/g, ' ')
    .replace(/[ ]{2,}/g, ' ')
    .trim();

  const esEscobilla = /escobill/i.test(producto.categoria_nombre || '') || /escobill/i.test(producto.nombre || '');
  const tieneAplic = esEscobilla && _cleanDescripcion.length > 0;

  function normalizeAplicaciones(raw){
    let s = String(raw ?? '').trim();
    if (!s) return { subtitle:'', lines:[] };

    // si viene todo en una línea, separar antes de marcas MAYÚSCULAS (HONDA, CHEVROLET, etc.)
    if (!s.includes('\n')) {
      const m = s.match(/\b[A-ZÁÉÍÓÚÑ]{2,}\b/);
      if (m && typeof m.index === 'number' && m.index > 0) {
        const subtitle = s.slice(0, m.index).trim();
        const rest = s.slice(m.index).trim().replace(/\s+(?=[A-ZÁÉÍÓÚÑ]{2,}\b)/g, '\n');
        s = subtitle + '\n' + rest;
      } else {
        s = s.replace(/\s{2,}/g, '\n');
      }
    }

    const lines = s.split('\n').map(x => x.trim()).filter(Boolean);
    let subtitle = '';
    if (lines.length >= 2 && /^(escobilla|kit|rear)/i.test(lines[0])) subtitle = lines.shift();
    return { subtitle, lines };
  }

  const appsData = normalizeAplicaciones(_cleanDescripcion);
  const preview = (appsData.lines || []).slice(0, 5);

  const label = producto.oferta ? 'OFERTA' : (producto.calidad_original ? 'CALIDAD FITAM' : (producto.calidad_vic ? 'CALIDAD VIC' : ''));
%>

<main class="detalle-page">
  <section class="detalle-shell">
    <div class="detalle-grid">

      <!-- IZQUIERDA: GALERIA GRANDE -->
      <div class="detalle-left">
        <div class="detalle-galeria">

          <% if (producto.imagenes && producto.imagenes.length > 0) { %>
            <button class="carousel__button carousel__button--left" onclick="moverCarruselDetalle(-1)">
              <i class="fas fa-chevron-left"></i>
            </button>

            <div class="carousel-container">
              <div class="carousel-wrapper">
                <div class="carousel" id="carousel-detalle">
                  <% producto.imagenes.forEach((imgObj, i) => { 
                       const file = (imgObj && (imgObj.imagen || imgObj.archivo || imgObj.url)) ? (imgObj.imagen || imgObj.archivo || imgObj.url) : imgObj;
                  %>
                    <img class="carousel__image <%= i !== 0 ? 'hidden' : '' %>"
                         src="/uploads/productos/<%= file %>"
                         alt="<%= producto.nombre %>"
                         onerror="this.src='/images/noEncontrado.png'">
                  <% }) %>
                </div>
              </div>
            </div>

            <button class="carousel__button carousel__button--right" onclick="moverCarruselDetalle(1)">
              <i class="fas fa-chevron-right"></i>
            </button>

            <!-- thumbs -->
            <div class="detalle-thumbs" id="thumbs-detalle">
              <% producto.imagenes.forEach((imgObj, i) => {
                   const file = (imgObj && (imgObj.imagen || imgObj.archivo || imgObj.url)) ? (imgObj.imagen || imgObj.archivo || imgObj.url) : imgObj;
              %>
                <button type="button" class="detalle-thumb <%= i === 0 ? 'is-active' : '' %>" data-idx="<%= i %>" title="Ver imagen <%= i+1 %>">
                  <img src="/uploads/productos/<%= file %>" alt="<%= producto.nombre %>" onerror="this.src='/images/noEncontrado.png'">
                </button>
              <% }) %>
            </div>

          <% } else { %>
            <div class="carousel-container">
              <div class="carousel-wrapper">
                <img class="carousel__image"
                     src="/images/noEncontrado.png"
                     alt="<%= producto.nombre %>">
              </div>
            </div>
          <% } %>

        </div>
      </div>

      <!-- DERECHA: INFO ORDENADA -->
      <div class="detalle-right">

        <div class="detalle-badges">
          <span class="badge-soft">
            <i class="fa-solid fa-tag"></i>
            <%= producto.categoria_nombre || "Sin categoría" %>
          </span>

          <% if (label) { %>
            <span class="badge-soft">
              <i class="fa-solid fa-star"></i>
              <%= label %>
            </span>
          <% } %>
        </div>

        <h1 class="detalle-title"><%= producto.nombre %></h1>

        <div class="detalle-price">
          <%= new Intl.NumberFormat('es-AR', { style: 'currency', currency: 'ARS', maximumFractionDigits: 0 }).format(producto.precio_venta || 0) %>
        </div>

        <div class="detalle-sep"></div>

        <% if (tieneAplic) { %>
          <div class="apps-card">
            <div class="apps-head">
              <div class="apps-title">
                <i class="fa-solid fa-car"></i>
                <span>Aplicaciones</span>
              </div>

              <button type="button" class="btn-aplicaciones" id="btnAppsDetalle"
                data-titulo="<%= producto.nombre %>"
                data-aplicaciones="<%= encodeURIComponent(_cleanDescripcion) %>">
                <i class="fa-solid fa-list"></i>
                <span>Ver todas</span>
              </button>
            </div>

            <% if (appsData.subtitle) { %>
              <div class="apps-more" style="margin-top:-2px;margin-bottom:8px;">
                <i class="fa-solid fa-circle-info"></i>
                <span><%= appsData.subtitle %></span>
              </div>
            <% } %>

            <ul class="apps-preview">
              <% if (preview.length) { %>
                <% preview.forEach(l => { %>
                  <li class="apps-item">
                    <i class="fa-solid fa-car"></i>
                    <span><%= l %></span>
                  </li>
                <% }) %>
              <% } else { %>
                <li class="apps-item">
                  <i class="fa-solid fa-car"></i>
                  <span>Sin aplicaciones cargadas.</span>
                </li>
              <% } %>
            </ul>

            <% if ((appsData.lines || []).length > preview.length) { %>
              <div class="apps-more">
                <i class="fa-solid fa-ellipsis"></i>
                <span>Y <%= (appsData.lines.length - preview.length) %> más…</span>
              </div>
            <% } %>
          </div>

        <% } else if (_cleanDescripcion) { %>
          <div class="desc-block">
            <div class="desc-title">Descripción</div>
            <div class="desc-text"><%= _cleanDescripcion %></div>
          </div>
        <% } %>

        <div class="detalle-sep"></div>

        <% if (isUserLoggedIn) { %>
          <% if (isAdminUser) { %>
            <div class="stock-producto <%= producto.stock_actual >= producto.stock_minimo ? 'suficiente-stock' : 'bajo-stock' %>">
              <p>Stock Disponible: <%= producto.stock_actual %></p>
            </div>
          <% } else { %>
            <div class="semaforo-stock">
              <i class="fa-solid fa-thumbs-<%= producto.stock_actual >= producto.stock_minimo ? 'up verde' : 'down rojo' %>"></i>
              <span class="texto-semaforo">
                <%= producto.stock_actual >= producto.stock_minimo ? "PRODUCTO DISPONIBLE PARA ENTREGA INMEDIATA" : "PRODUCTO PENDIENTE DE INGRESO O A PEDIDO" %>
              </span>
            </div>
          <% } %>
        <% } %>

      </div>
    </div>
  </section>
</main>

