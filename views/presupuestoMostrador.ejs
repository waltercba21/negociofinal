<%- include ./layouts/head.ejs %>
<%- include ./layouts/header.ejs %>
<body>
   <main>
    <div class="button-container-presupuesto">
      <button class="btn-primary-presupuestos" onclick="window.location.href='/productos/listadoPresupuestos'">Listado de Presupuestos</button>
  </div>
    <form id="invoice-form" action="/productos/procesarFormulario" method="POST">
      <div id="invoice">
        <h2>Presupuesto</h2>
        <div id="invoice-details">
          <div class="input-container">
            <label for="nombre-cliente">Nombre del cliente:</label>
            <input type="text" id="nombre-cliente" name="nombreCliente">
          </div>
          <div class="input-container">
            <label for="fecha-presupuesto">Fecha:</label>
            <input type="date" id="fecha-presupuesto" name="fechaPresupuesto">
          </div>
          <div class="input-container">
            <label for="numero-presupuesto">N° Presupuesto</label>
            <p><%= idPresupuesto %></p>
          </div>
        </div>
        <div class="buscador">
          <input type="text" id="entradaBusqueda" name="searchInput" placeholder="Qué estás buscando? Ej: Escort, Óptica, Faro, Agile" autocomplete="off">
          <div id="resultadosBusqueda"></div>
        </div>
        <div id="invoice-items">
            <table id="tabla-factura">
              <thead>
                  <tr>
                      <th>Código</th>
                      <th>Descripción</th>
                      <th>Precio Unitario</th>
                      <th>Cantidad</th>
                      <th>Stock Actual</th> 
                      <th>Subtotal</th>
                      <th>Eliminar</th>
                  </tr>
              </thead>
              <tbody>
                  <!-- Las filas de productos se agregarán aquí -->
              </tbody>
          </table>
          
        </div>
        <div id="invoice-total">
         <label>Total: <input type="text" id="total-amount" name="totalPresupuesto" readonly></label>
        </div>
        <input type="hidden" id="invoiceItems" name="invoiceItems">
        <div class="botones-contenedor">
          <button type="submit">Guardar Presupuesto</button>
          <button type="button" id="print-button">Imprimir Presupuesto</button>
        </div>
      </div>
    </form>
   </main> 
   <%- include ./layouts/footer.ejs %>
   <script src="/js/buscadorPresupuesto.js"></script> 
   <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
  