<%- include ./layouts/head.ejs %>
<%- include ./layouts/header.ejs %>
<body>
   <main>
    <form id="invoice-form" action="/productos/procesarFormulario" method="POST">
      <div id="invoice">
        <h2>Presupuesto</h2>
        <div id="invoice-details">
          <div class="input-container">
            <label for="nombre-cliente">Nombre del cliente:</label>
            <input type="text" id="nombre-cliente" name="nombreCliente">
          </div>
          <div class="input-container">
            <label for="fecha-presupuesto">Fecha:</label>
            <input type="date" id="fecha-presupuesto" name="fechaPresupuesto">
          </div>
          <div class="input-container">
            <label for="numero-presupuesto">N° Presupuesto</label>
            <p><%= idPresupuesto %></p>
          </div>
        </div>
        <div class="buscador">
          <input type="text" id="entradaBusqueda" name="searchInput" placeholder="Qué estás buscando? Ej: Escort, Óptica, Faro, Agile">
          <div id="resultadosBusqueda"></div>
        </div>
        <div id="invoice-items">
          <table class="table" id="tabla-factura">
            <thead>
              <tr>
                <th class="codigo" scope="col">Código</th>
                <th class="descripcion" scope="col">Descripción</th>
                <th class="precio" scope="col">Precio</th>
                <th class="cantidad" scope="col">Cantidad</th>
                <th class="subtotal" scope="col">Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <!-- Aquí se generarán dinámicamente los elementos del presupuesto -->
              <!-- Ejemplo de fila -->
              <tr>
                <td class="codigo" data-product-id="123">OP020079</td>
                <td class="descripcion">Óptica Ford Falc</td>
                <td class="precio">23700.00</td>
                <td class="cantidad"><input type="number" value="3"></td>
                <td class="subtotal">71100</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div id="invoice-total">
          <label>Total: <input type="number" id="total-amount" name="totalPresupuesto" readonly></label>
        </div>
        <div class="botones-contenedor">
          <button type="submit">Guardar Presupuesto</button>
          <button type="button" id="print-button">Imprimir Presupuesto</button>
        </div>
      </div>
    </form>
    
    
    
   </main>
   <%- include ./layouts/footer.ejs %>
   <script src="/js/buscadorPresupuesto.js"></script> 
   <script>
  document.getElementById('invoice-form').addEventListener('submit', function(event) {
  event.preventDefault();

  const form = event.target;
  const formData = new FormData(form);
  const items = [];

  document.querySelectorAll('#tabla-factura tbody tr').forEach(row => {
    const item = {
      producto_id: row.querySelector('.codigo').dataset.productId, // Usar data attribute para id de producto
      cantidad: row.querySelector('.cantidad input').value.trim(),
      precio_unitario: row.querySelector('.precio').textContent.trim(),
      subtotal: row.querySelector('.subtotal').textContent.trim()
    };
    items.push(item);
  });

  console.log('Items:', items);

  const data = {
    nombreCliente: formData.get('nombreCliente'),
    fechaPresupuesto: formData.get('fechaPresupuesto'),
    searchInput: formData.get('searchInput'),
    totalPresupuesto: formData.get('totalPresupuesto'),
    invoiceItems: JSON.stringify(items)
  };

  console.log('Datos a enviar:', data);

  fetch(form.action, {
    method: form.method,
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(data)
  })
  .then(response => response.json())
  .then(data => {
    if (data.error) {
      alert('Error al guardar el presupuesto: ' + data.error);
    } else {
      alert('Presupuesto guardado exitosamente. ID: ' + data.presupuestoId);
    }
  })
  .catch(error => {
    console.error('Error al enviar el formulario:', error);
    alert('Error al guardar el presupuesto.');
  });
});
  </script>
</body>
