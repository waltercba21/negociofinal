<%- include ./layouts/head.ejs %>
<%- include ./layouts/header.ejs %>
<body>
   <main>
    <div class="button-container-presupuesto">
      <button class="btn-primary-presupuestos" onclick="window.location.href='/productos/listadoPresupuestos'">Listado de Presupuestos</button>
    </div>
    <form id="invoice-form" action="/productos/procesarFormulario" method="POST">
      <div id="invoice">
        <h2>Presupuestos</h2>
        <div id="invoice-details">
          <div class="input-container">
            <label for="nombre-cliente">Vendedor:</label>
            <select id="nombre-cliente" name="nombreCliente" required>
              <option value="">Seleccionar vendedor</option>
              <option value="CHACHO">CHACHO</option>
              <option value="GERARDO">GERARDO</option>
              <option value="WALTER">WALTER</option>
            </select>
          </div>
          
          <div class="input-container">
            <label for="fecha-presupuesto">Fecha:</label>
            <input type="date" id="fecha-presupuesto" name="fechaPresupuesto">
          </div>
          <div class="input-container">
            <label for="numero-presupuesto">N° Presupuesto</label>
            <p><%= idPresupuesto%></p>
          </div>
        </div>

        <div class="buscador">
          <input type="text" id="entradaBusqueda" name="searchInput" placeholder="Qué estás buscando? Ej: Escort, Óptica, Faro, Agile" autocomplete="off">
          <div id="resultadosBusqueda"></div>
        </div>
        
        <!-- === Buscador por selectores (categoría / marca / modelo) === -->
<section id="buscador-selectores" class="buscador-selectores">
  <div class="selectores-grid">
    <div>
      <label for="selector-categoria">Categoría</label>
      <select id="selector-categoria">
        <option value="">Seleccioná una categoría</option>
      </select>
    </div>
    <div>
      <label for="selector-marca">Marca</label>
      <select id="selector-marca">
        <option value="">Seleccioná una marca</option>
      </select>
    </div>
    <div>
      <label for="selector-modelo">Modelo</label>
      <select id="selector-modelo" disabled>
        <option value="">Seleccioná un modelo</option>
      </select>
    </div>
    <div style="align-self:end;">
      <button type="button" id="btn-buscar-selectores" class="btn-primary-presupuestos">Buscar</button>
    </div>
  </div>
</section>

<!-- === Modal resultados selectores === -->
<div id="modal-selectores" class="modal-selectores" style="display:none;">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Resultados de la búsqueda</h3>
      <button type="button" id="modal-close">&times;</button>
    </div>
    <div class="modal-body" id="modal-resultados">
      <!-- Se llena dinámicamente -->
    </div>
  </div>
</div>


        <div id="invoice-items">
          <table id="tabla-factura">
              <thead>
                  <tr>
                      <th>Imagen</th>
                      <th>Código</th>
                      <th>Descripción</th>
                      <th>Precio Unitario</th>
                      <th>Cantidad</th>
                      <th>Stock Actual</th>
                      <th>Subtotal</th>
                      <th>Eliminar</th>
                  </tr>
              </thead>
              <tbody>
                <% for(let i = 0; i < 10; i++) { %>
                    <tr>
                        <td><img src="" class="miniatura-tabla" style="display: none;"></td>
                        <td></td> <!-- Código -->
                        <td></td> <!-- Descripción -->
                        <td><input type="text" class="precio-editable" disabled></td>
                        <td><input type="number" min="1" value="0" disabled></td>
                        <td></td> <!-- Stock -->
                        <td></td> <!-- Subtotal -->
                        <td>
                          <button type="button" class="boton-eliminar-factura" style="display: none;">
                            <i class="fas fa-trash"></i>
                          </button>
                        </td>
                        
                    </tr>
                <% } %>
            </tbody>
            
          </table>
      </div>
        <div id="invoice-total">
         <label id="label-total">Total: <input type="text" id="total-amount" name="totalPresupuesto" readonly></label>

        </div>
        <input type="hidden" id="invoiceItems" name="invoiceItems">
        <div class="botones-contenedor">
          <button type="submit">Guardar Presupuesto</button>
        </div>
      </div>
    </form>
   </main>
   <%- include ./layouts/footer.ejs %>
   <script src="/js/buscadorPresupuesto.js"></script>
   <script src="/js/selectoresMostrador.js"></script>

   <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>