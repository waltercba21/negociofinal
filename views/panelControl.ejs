<%- include ./layouts/head.ejs %>
<%- include ./layouts/header.ejs %>

<body>
  <style>
  /* ======================== PANEL CONTROL — MODO COMPACTO UNIVERSAL ======================== */
  /* Pensado para el HTML actual del panel (botones + 3 formularios + listado tipo grid).      */
  /* No requiere cambiar tu markup y evita colisionar con otras vistas ajustando selectores.   */

  /* ---------- Contenedor general ---------- */
  main > .container {
    max-width: 1400px;              /* limita ancho en pantallas muy grandes */
    padding-left: 10px;
    padding-right: 10px;
  }

  /* ---------- Tarjetas/segmentos de la parte superior (reutilizan .form-control como caja) ---------- */
  main > .container > .form-control {
    box-shadow: 0 6px 18px rgba(0,0,0,.06);
    border: 1px solid rgba(31,72,126,.12);
    border-radius: 12px;
    padding: 14px;                  /* compacto */
    margin-bottom: 14px;
    background: #fff;
  }

  main > .container > .form-control h4 {
    font-size: 1rem;                /* ↓ títulos más chicos */
    font-weight: 700;
    color: #1f487e;
    margin: 0 0 10px 0;
  }

  /* ---------- Grupo de botones principales ---------- */
.form-control.botones {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 10px;
  align-items: stretch;            /* cada celda estira su contenido */
}

.form-control.botones .panel-control.btn {
  display: flex;                   /* permite centrar contenido */
  align-items: center;             /* centrado vertical */
  justify-content: center;         /* centrado horizontal */
  text-align: center;              /* centra líneas múltiples */
  height: 100%;                    /* ocupa toda la celda del grid */
  min-height: 48px;                /* alto mínimo consistente */
  line-height: 1.2;                /* evita texto “estirado” */
  padding: 10px 12px;              /* cómodo pero compacto */
  white-space: normal;             /* permite 2+ líneas si hace falta */
}

  /* ---------- Formularios (selects, inputs, file) ---------- */
  main > .container > .form-control label {
    font-size: 0.9rem;
    font-weight: 600;
    color: #29486f;
    margin: 0 8px 4px 0;
  }
  main > .container > .form-control select,
  main > .container > .form-control input[type="file"] {
    font-size: 0.9rem;
    padding: .35rem .5rem;          /* compacto */
    height: auto;
    line-height: 1.25;
    border-radius: 10px;
  }
  main > .container > .form-control button.btn {
    padding: 8px 12px;
    font-size: 0.92rem;
    border-radius: 10px;
    font-weight: 700;
  }

  /* ---------- Bloque: Generar Stock Proveedor (PDF) ---------- */
  #contenedor-pdf-stock-proveedor .grupo-campos {
    gap: 10px !important;
  }
  #contenedor-pdf-stock-proveedor .form-select {
    padding: .35rem .5rem;
    font-size: .9rem;
  }
  #contenedor-pdf-stock-proveedor legend {
    font-size: .95rem;
    margin-bottom: 6px;
  }
  #contenedor-pdf-stock-proveedor .opciones-reporte label {
    font-size: .9rem;
  }
  #contenedor-pdf-stock-proveedor button.btn {
    padding: 8px 12px;
    font-size: .92rem;
    border-radius: 10px;
  }

  /* ===================== Listado (paginador + buscador + grilla) ===================== */

  /* Paginación */
  .panel-paginacion {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    align-items: center;
    justify-content: center;
    margin-bottom: 10px;
    user-select: none;
  }
  .panel-paginacion a,
  .panel-paginacion span {
    padding: 4px 8px;
    font-size: .9rem;
    border: 1px solid #dfe7f2;
    border-radius: 8px;
    color: #1f487e;
    text-decoration: none;
    background: #fff;
  }
  .panel-paginacion span.active {
    background: #1f487e;
    border-color: #1f487e;
    color: #fff;
  }

  /* Buscador */
  .panel-buscador #entradaBusqueda {
    font-size: .95rem;
    padding: .45rem .6rem;
    height: auto;
    line-height: 1.25;
    border-radius: 10px;
  }

  /* Contenedor del listado con scroll horizontal de respaldo (no corta columnas) */
  .panel-container {
    overflow-x: auto;               /* si no entra, permite desplazamiento horizontal */
    padding-bottom: 6px;
  }

  /* Cabecera y filas como grilla compacta */
  .panel-header,
  .panel-row {
    display: grid;
    grid-template-columns: 36px 1.1fr 2fr 120px .9fr 140px; /* ✔ col de check | categoría | nombre | imagen | precio | acciones */
    gap: 8px;
    align-items: center;
    min-width: 900px;               /* asegura estructura estable en pantallas muy chicas */
  }

  .panel-header {
    position: sticky;
    top: 0;
    z-index: 1;
    background: #f6f8fb;
    border: 1px solid #e5edf7;
    border-radius: 10px;
    padding: 8px;
    font-weight: 700;
    font-size: .9rem;
    color: #1f487e;
  }

  .panel-row {
    border-bottom: 1px solid #eef2f7;
    padding: 8px 2px;
    font-size: .92rem;
  }

  .panel-col-small { width: 36px; text-align: center; }
  .panel-text-small-bold { font-weight: 600; font-size: .9rem; }

  .panel-image-container {
    width: 100%;
    max-width: 120px;
    margin: 0 auto;
  }
  .product-image {
    display: block;
    width: 100%;
    height: 70px;                   /* altura fija compacta */
    object-fit: contain;
  }

  .panel-price { font-weight: 700; color: #0b6e4f; }

  /* Acciones */
  .btn-edit {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 10px;
    font-size: .85rem;
    font-weight: 700;
    border: 1px solid #d0d7e2;
    border-radius: 8px;
    background: #fff;
    color: #1f487e;
    cursor: pointer;
  }

  .panel-actions { display: flex; justify-content: flex-end; padding-top: 10px; }
  .btn-delete {
    padding: 6px 10px;
    font-size: .85rem;
    font-weight: 700;
    border-radius: 8px;
    border: 1px solid #f2d7da;
    background: #fff;
    color: #dc3545;
    cursor: pointer;
  }

  .panel-alert {
    font-size: .95rem;
    color: #6b7280;
    padding: 10px;
    text-align: center;
  }

  /* ===================== Breakpoints (más compacto en resoluciones comunes) ===================== */

  /* 1600px: leves ajustes */
  @media (max-width: 1600px) {
    .panel-header,
    .panel-row {
      grid-template-columns: 36px 1fr 1.8fr 110px .85fr 130px;
    }
  }

  /* 1366px: tamaño típico de monitores chicos */
  @media (max-width: 1366px) {
    main > .container { max-width: 98vw; }
    .form-control.botones { grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); }

    .panel-header,
    .panel-row {
      grid-template-columns: 34px 1fr 1.6fr 100px .8fr 120px;
      gap: 7px;
      min-width: 860px;
    }
    .panel-header { font-size: .88rem; padding: 7px; }
    .panel-row    { font-size: .9rem;  padding: 7px 2px; }
    .panel-image-container { max-width: 100px; }
    .product-image { height: 64px; }
    .btn-edit, .btn-delete { padding: 6px 9px; font-size: .83rem; }
  }

  /* 1280px: aún más angosto */
  @media (max-width: 1280px) {
    .panel-header,
    .panel-row {
      grid-template-columns: 32px .9fr 1.4fr 90px .75fr 110px;
      min-width: 820px;
    }
    .panel-image-container { max-width: 90px; }
    .product-image { height: 58px; }
  }

  /* 1024px: notebooks compactas */
  @media (max-width: 1024px) {
    .form-control.botones { grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); }
    .panel-header,
    .panel-row {
      grid-template-columns: 30px .9fr 1.3fr 84px .7fr 104px;
      gap: 6px;
      min-width: 780px;
    }
    .panel-image-container { max-width: 84px; }
    .product-image { height: 54px; }
  }

  /* 768px: tablets / si se usa en móvil, se mantiene scroll horizontal y se baja tipografía */
  @media (max-width: 768px) {
    main > .container > .form-control { padding: 12px; }
    .form-control.botones .panel-control.btn { font-size: .9rem; padding: 7px 9px; }
    .panel-header { font-size: .85rem; }
    .panel-row    { font-size: .88rem; }
  }
</style>

  <main>
    <div class="container"> 
      <div class="form-control botones">
        <a href="/productos/crear" class="btn btn-primary panel-control">Crear un nuevo producto</a>
        <a href="/productos/modificarPorProveedor" class="btn btn-primary panel-control">Modificar producto por proveedor</a>
        <a href="/productos/generarPedidoManual" class="btn btn-primary panel-control">Generar Pedido Manual</a>
        <a href="/productos/historialPedidos" class="btn btn-primary panel-control">Historial Pedidos</a>
        <a href="/productos/masVendidos" class="btn btn-success panel-control">Ver productos más vendidos</a>
      </div>

      <div class="form-control">
        <h4>Generar Lista Precios</h4>
        <form method="get" action="/productos/generarPDF">
          <label for="proveedor">Seleccionar Proveedor</label> 
          <select name="proveedor" id="proveedor">
            <option value="TODOS">Mostrar Todos</option>
            <% proveedores.forEach(proveedor => { %>
              <option value="<%= proveedor.id %>" <%= proveedor.id == proveedorSeleccionado ? 'selected' : '' %>>
                <%= proveedor.nombre %>
              </option>
            <% }); %>
          </select>

          <label for="categoria">Seleccionar Categoría</label>
          <select name="categoria" id="categoria">
            <option value="">Mostrar Todas</option>
            <% categorias.forEach(categoria => { %>
              <option value="<%= categoria.id %>" <%= categoria.id == categoriaSeleccionada ? 'selected' : '' %>>
                <%= categoria.nombre %>
              </option>
            <% }); %>
          </select>
          <button type="submit" class="btn btn-primary">Generar PDF</button>
        </form>
      </div>

      <div class="form-control">
        <h4>Actualizar Precios con Excel</h4>
        <form method="post" action="/productos/actualizarPreciosExcel" enctype="multipart/form-data"> 
          <label for="proveedorActualizar">Seleccionar Proveedor</label>
          <select name="proveedor" id="proveedorActualizar">
            <option value="TODOS">Mostrar Todos</option>
            <% proveedores.forEach(proveedor => { %>
              <option value="<%= proveedor.id %>" <%= proveedor.id == proveedorSeleccionado ? 'selected' : '' %>>
                <%= proveedor.nombre %>
              </option>
            <% }); %>
          </select>

          <label for="archivo">Subir lista de precios</label>
          <input type="file" id="archivo" name="archivos[]" accept=".xlsx,.pdf">
          <button type="submit" class="btn btn-primary">Actualizar precios</button>
        </form>
      </div>

<!-- ====== Contenedor: Generar Stock Proveedor (PDF) ====== -->
<div class="form-control" id="contenedor-pdf-stock-proveedor">
  <h4>Generar Stock Proveedor</h4>

  <form method="get" action="/productos/generarPDFProveedor" id="form-pdf-stock-proveedor">
    <!-- ÁMBITO (Proveedor / Categoría) -->
    <fieldset style="border:0; padding:0; margin:0 0 10px 0;">
      <div class="grupo-campos" style="display:flex; gap:12px; flex-wrap:wrap;">
        <label for="pdf-prov-proveedor" style="min-width:220px;">
          <span class="d-block">Seleccionar Proveedor</span>
          <select name="proveedor" id="pdf-prov-proveedor" class="form-select">
            <option value="TODOS">Mostrar Todos</option>
            <% proveedores.forEach(proveedor => { %>
              <option value="<%= proveedor.id %>" <%= proveedor.id == proveedorSeleccionado ? 'selected' : '' %>>
                <%= proveedor.nombre %>
              </option>
            <% }); %>
          </select>
        </label>

        <label for="pdf-prov-categoria" style="min-width:220px;">
          <span class="d-block">Seleccionar Categoría</span>
          <select name="categoria" id="pdf-prov-categoria" class="form-select">
            <option value="TODAS">Mostrar Todas</option>
            <% categorias.forEach(categoria => { %>
              <option value="<%= categoria.id %>" <%= categoria.id == categoriaSeleccionada ? 'selected' : '' %>>
                <%= categoria.nombre %>
              </option>
            <% }); %>
          </select>
        </label>
      </div>
      <small class="text-muted d-block" style="margin-top:6px;">
        Tip: podés combinar proveedor y categoría para filtrar el reporte.
      </small>
    </fieldset>

    <!-- TIPO DE REPORTE -->
    <fieldset style="border:0; padding:0; margin-top:14px;">
      <legend style="font-size:0.95rem; font-weight:600; margin-bottom:6px;">Tipo de reporte</legend>

      <div class="opciones-reporte" style="display:grid; gap:6px;">
        <label>
          <input type="radio" name="tipo" value="stock" checked>
          <strong>Stock completo</strong> — Muestra todo el stock (aplica filtros si elegís proveedor/categoría).
        </label>

        <label>
          <input type="radio" name="tipo" value="asignadoCompleto">
          <strong>Asignados al proveedor (con categoría)</strong> — Lista <em>todos</em> los productos asignados
          al proveedor elegido (opcionalmente filtrados por categoría). <!-- Requiere ajuste en el controller -->
        </label>

        <label>
          <input type="radio" name="tipo" value="asignado">
          <strong>Faltantes del proveedor asignado</strong> — Solo productos asignados al proveedor cuya
          existencia está por debajo del stock mínimo.
        </label>

        <label>
          <input type="radio" name="tipo" value="pedido">
          <strong>Faltantes del proveedor más barato</strong> — Productos por debajo del mínimo considerando
          al proveedor con mejor costo.
        </label>

        <label>
          <input type="radio" name="tipo" value="porCategoria">
          <strong>Listado por categoría (todos los proveedores)</strong> — Ignora el proveedor y lista según categoría.
        </label>

        <label>
          <input type="radio" name="tipo" value="categoriaProveedorMasBarato">
          <strong>Proveedor más barato por categoría</strong> — Requiere proveedor y categoría.
        </label>
      </div>
    </fieldset>

    <div style="margin-top:14px;">
      <button type="submit" class="btn btn-primary">Generar PDF</button>
    </div>
  </form>
</div>
<!-- ====== /Contenedor ====== -->


    <div class="panel-busqueda">

      <div class="panel-paginacion mb-3">
        <% if (paginaActual > 1) { %>
          <a href="?pagina=<%= paginaActual - 1 %>">&laquo;</a>
        <% } %>
    
        <% if (paginaActual > 10) { %>
          <a href="?pagina=1">1</a>
          <span>...</span>
        <% } %>
    
        <% for (let i = Math.max(1, paginaActual - 1); i <= Math.min(paginaActual + 10, numeroDePaginas); i++) { %>
          <% if (paginaActual === i) { %>
            <span class="active"><%= i %></span>
          <% } else { %>
            <a href="?pagina=<%= i %>"><%= i %></a>
          <% } %>
        <% } %>
    
        <% if (paginaActual < numeroDePaginas - 1) { %>
          <span>...</span>
          <a href="?pagina=<%= numeroDePaginas %>"><%= numeroDePaginas %></a>
        <% } %>
    
        <% if (paginaActual < numeroDePaginas) { %>
          <a href="?pagina=<%= paginaActual + 1 %>">&raquo;</a>
        <% } %>
      </div>
    
      <!-- BUSCADOR -->
      <div class="panel-buscador mb-4">
        <input
          type="text"
          id="entradaBusqueda"
          class="form-control"
          autocomplete="off"
          placeholder="¿Qué estás buscando? Ej: Escort, Óptica, Faro, Agile"
        /> 
      </div>

      <div class="panel-container">
        <% if (productos && productos.length > 0) { %>
          
          <!-- Encabezado de columnas -->
          <div class="panel-header">
            <div class="panel-col panel-col-small">✔</div>
            <div class="panel-col">Categoría</div>
            <div class="panel-col">Nombre</div>
            <div class="panel-col">Imagen</div>
            <div class="panel-col">Precio</div>
            <div class="panel-col">Acciones</div>
          </div>
      
          <!-- Productos -->
          <% productos.forEach(producto => { %>
            <div class="panel-row">
              <div class="panel-col panel-col-small">
                <input
                  type="checkbox"
                  class="product-check"
                  value="<%= producto.id %>"
                />
              </div>
      
              <div class="panel-text-small-bold">
                <%= producto.categoria %>
              </div>
      
              <div class="panel-text-small-bold">
                <%= producto.nombre %>
              </div>
      
              <div class="panel-col">
                <% if (producto.imagenes && producto.imagenes.length > 0) { %>
                  <div class="panel-image-container">
                    <img
                      src="/uploads/productos/<%= producto.imagenes[0] %>"
                      alt="Imagen de <%= producto.nombre %>"
                      class="product-image"
                    />
                  </div>
                <% } else { %>
                  <div class="panel-image-container">
                    <span class="no-image">(Sin imagen)</span>
                  </div>
                <% } %>
              </div>
              
              <div class="panel-col panel-price">
                $<%= parseInt(producto.precio_venta) %>
              </div>
      
              <div class="panel-col">
                <form method="get" action="/productos/editar/<%= producto.id %>?pagina=<%= paginaActual %><%= busquedaActual ? '&busqueda=' + busquedaActual.replace(/ /g, '+') : '' %>">
                  <button class="btn-edit">
                    <i class="fas fa-edit"></i> Editar
                  </button>
                </form>
              </div>
            </div>
          <% }); %>
      
        <% } else { %>
          <div class="panel-alert">
            No hay productos para mostrar.
          </div>
        <% } %>
      
        <!-- Botón eliminar -->
<div class="panel-actions">
  <button id="delete-selected" class="btn-delete" type="button">
    Eliminar seleccionados
  </button>
</div>

      </div>
    
  </main>

  <%- include ./layouts/footer.ejs %>
  <script src="/js/panelControl.js"></script> 
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script id="productos-data" type="application/json">
    <%- JSON.stringify(productos) %>
  </script>
 
</body>
