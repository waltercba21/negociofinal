<%- include ./layouts/head.ejs %>
<%- include ./layouts/header.ejs %>

<body>
  <main>
    <div class="container"> 
      <div class="form-control botones">
        <a href="/productos/crear" class="btn btn-primary panel-control">Crear un nuevo producto</a>
        <a href="/productos/modificarPorProveedor" class="btn btn-primary panel-control">Modificar producto por proveedor</a>
        <a href="/productos/generarPedidoManual" class="btn btn-primary panel-control">Generar Pedido Manual</a>
        <a href="/productos/historialPedidos" class="btn btn-primary panel-control">Historial Pedidos</a>
        <a href="/productos/masVendidos" class="btn btn-success panel-control">Ver productos más vendidos</a>
      </div>

      <div class="form-control">
        <h4>Generar Lista Precios</h4>
        <form method="get" action="/productos/generarPDF">
          <label for="proveedor">Seleccionar Proveedor</label> 
          <select name="proveedor" id="proveedor">
            <option value="TODOS">Mostrar Todos</option>
            <% proveedores.forEach(proveedor => { %>
              <option value="<%= proveedor.id %>" <%= proveedor.id == proveedorSeleccionado ? 'selected' : '' %>>
                <%= proveedor.nombre %>
              </option>
            <% }); %>
          </select>

          <label for="categoria">Seleccionar Categoría</label>
          <select name="categoria" id="categoria">
            <option value="">Mostrar Todas</option>
            <% categorias.forEach(categoria => { %>
              <option value="<%= categoria.id %>" <%= categoria.id == categoriaSeleccionada ? 'selected' : '' %>>
                <%= categoria.nombre %>
              </option>
            <% }); %>
          </select>
          <button type="submit" class="btn btn-primary">Generar PDF</button>
        </form>
      </div>

      <div class="form-control">
        <h4>Actualizar Precios con Excel</h4>
        <form method="post" action="/productos/actualizarPreciosExcel" enctype="multipart/form-data"> 
          <label for="proveedorActualizar">Seleccionar Proveedor</label>
          <select name="proveedor" id="proveedorActualizar">
            <option value="TODOS">Mostrar Todos</option>
            <% proveedores.forEach(proveedor => { %>
              <option value="<%= proveedor.id %>" <%= proveedor.id == proveedorSeleccionado ? 'selected' : '' %>>
                <%= proveedor.nombre %>
              </option>
            <% }); %>
          </select>

          <label for="archivo">Subir lista de precios</label>
          <input type="file" id="archivo" name="archivos[]" accept=".xlsx,.pdf">
          <button type="submit" class="btn btn-primary">Actualizar precios</button>
        </form>
      </div>

      <div class="form-control">
  <h4 class="mb-2">Listados de stock y pedido</h4>
  <p class="text-muted mb-3" style="line-height:1.3">
    Elegí el tipo de listado y, si corresponde, el proveedor y/o la categoría. El PDF se descarga automáticamente.
  </p>

  <form id="form-reportes" method="get" action="/productos/generarPDFProveedor" class="row g-3">
    <!-- Tipo de listado -->
    <div class="col-12">
      <fieldset class="border rounded p-3">
        <legend class="float-none w-auto px-2 fs-6 fw-semibold">Tipo de listado</legend>

        <!-- Catálogo / Stock -->
        <div class="mb-2">
          <div class="fw-semibold small text-uppercase text-secondary mb-1">Catálogo / Stock</div>

          <label class="d-block mb-1">
            <input type="radio" name="tipo" value="stock" checked>
            <span class="ms-1">Listado de stock completo</span>
            <span class="badge bg-light text-dark ms-2">Opcional: Proveedor · Categoría</span>
          </label>

          <label class="d-block">
            <input type="radio" name="tipo" value="porCategoria">
            <span class="ms-1">Listado por categoría</span>
            <span class="badge bg-warning text-dark ms-2">Requiere: Categoría</span>
          </label>
        </div>

        <hr class="my-3">

        <!-- Pedido sugerido -->
        <div>
          <div class="fw-semibold small text-uppercase text-secondary mb-1">Pedido sugerido</div>

          <label class="d-block mb-1">
            <input type="radio" name="tipo" value="pedido">
            <span class="ms-1">Productos por debajo del stock mínimo (Proveedor más barato)</span>
            <span class="badge bg-warning text-dark ms-2">Requiere: Proveedor</span>
            <span class="badge bg-light text-dark ms-1">Opcional: Categoría</span>
          </label>

          <label class="d-block mb-1">
            <input type="radio" name="tipo" value="asignado">
            <span class="ms-1">Productos por debajo del stock mínimo (Proveedor asignado)</span>
            <span class="badge bg-warning text-dark ms-2">Requiere: Proveedor</span>
            <span class="badge bg-light text-dark ms-1">Opcional: Categoría</span>
          </label>

          <label class="d-block">
            <input type="radio" name="tipo" value="categoriaProveedorMasBarato">
            <span class="ms-1">Catálogo por categoría con proveedor más barato</span>
            <span class="badge bg-warning text-dark ms-2">Requiere: Proveedor · Categoría</span>
          </label>
        </div>
      </fieldset>
    </div>

    <!-- Proveedor -->
    <div class="col-md-6">
      <label for="proveedor" class="form-label">Proveedor</label>
      <select name="proveedor" id="proveedor" class="form-select">
        <option value="TODOS">Todos los proveedores</option>
        <% proveedores.forEach(proveedor => { %>
          <option value="<%= proveedor.id %>" <%= proveedor.id == proveedorSeleccionado ? 'selected' : '' %>>
            <%= proveedor.nombre %>
          </option>
        <% }); %>
      </select>
      <div id="ayuda-proveedor" class="form-text">
        Obligatorio para: Pedido sugerido (ambas variantes) y “Categoría + más barato”.
      </div>
    </div>

    <!-- Categoría -->
    <div class="col-md-6">
      <label for="categoria" class="form-label">Categoría</label>
      <select name="categoria" id="categoria" class="form-select">
        <option value="TODAS">Todas las categorías</option>
        <% categorias.forEach(categoria => { %>
          <option value="<%= categoria.id %>" <%= categoria.id == categoriaSeleccionada ? 'selected' : '' %>>
            <%= categoria.nombre %>
          </option>
        <% }); %>
      </select>
      <div id="ayuda-categoria" class="form-text">
        Obligatoria para: Listado por categoría / Categoría + más barato.
      </div>
    </div>

    <!-- Alertas de requisitos -->
    <div class="col-12">
      <div id="alertas-requeridos" class="alert alert-warning d-none py-2 px-3 mb-0 small"></div>
    </div>

    <!-- CTA -->
    <div class="col-12 d-flex gap-2">
      <button type="submit" class="btn btn-primary">Generar PDF</button>
      <button type="button" id="btn-previa" class="btn btn-outline-secondary" disabled>Vista rápida (próximamente)</button>
    </div>
  </form>
</div>

    </div>
    <br/>

    <div class="panel-busqueda">

      <div class="panel-paginacion mb-3">
        <% if (paginaActual > 1) { %>
          <a href="?pagina=<%= paginaActual - 1 %>">&laquo;</a>
        <% } %>
    
        <% if (paginaActual > 10) { %>
          <a href="?pagina=1">1</a>
          <span>...</span>
        <% } %>
    
        <% for (let i = Math.max(1, paginaActual - 1); i <= Math.min(paginaActual + 10, numeroDePaginas); i++) { %>
          <% if (paginaActual === i) { %>
            <span class="active"><%= i %></span>
          <% } else { %>
            <a href="?pagina=<%= i %>"><%= i %></a>
          <% } %>
        <% } %>
    
        <% if (paginaActual < numeroDePaginas - 1) { %>
          <span>...</span>
          <a href="?pagina=<%= numeroDePaginas %>"><%= numeroDePaginas %></a>
        <% } %>
    
        <% if (paginaActual < numeroDePaginas) { %>
          <a href="?pagina=<%= paginaActual + 1 %>">&raquo;</a>
        <% } %>
      </div>
    
      <!-- BUSCADOR -->
      <div class="panel-buscador mb-4">
        <input
          type="text"
          id="entradaBusqueda"
          class="form-control"
          autocomplete="off"
          placeholder="¿Qué estás buscando? Ej: Escort, Óptica, Faro, Agile"
        /> 
      </div>

      <div class="panel-container">
        <% if (productos && productos.length > 0) { %>
          
          <!-- Encabezado de columnas -->
          <div class="panel-header">
            <div class="panel-col panel-col-small">✔</div>
            <div class="panel-col">Categoría</div>
            <div class="panel-col">Nombre</div>
            <div class="panel-col">Imagen</div>
            <div class="panel-col">Precio</div>
            <div class="panel-col">Acciones</div>
          </div>
      
          <!-- Productos -->
          <% productos.forEach(producto => { %>
            <div class="panel-row">
              <div class="panel-col panel-col-small">
                <input
                  type="checkbox"
                  class="product-check"
                  value="<%= producto.id %>"
                />
              </div>
      
              <div class="panel-text-small-bold">
                <%= producto.categoria %>
              </div>
      
              <div class="panel-text-small-bold">
                <%= producto.nombre %>
              </div>
      
              <div class="panel-col">
                <% if (producto.imagenes && producto.imagenes.length > 0) { %>
                  <div class="panel-image-container">
                    <img
                      src="/uploads/productos/<%= producto.imagenes[0] %>"
                      alt="Imagen de <%= producto.nombre %>"
                      class="product-image"
                    />
                  </div>
                <% } else { %>
                  <div class="panel-image-container">
                    <span class="no-image">(Sin imagen)</span>
                  </div>
                <% } %>
              </div>
              
              <div class="panel-col panel-price">
                $<%= parseInt(producto.precio_venta) %>
              </div>
      
              <div class="panel-col">
                <form method="get" action="/productos/editar/<%= producto.id %>?pagina=<%= paginaActual %><%= busquedaActual ? '&busqueda=' + busquedaActual.replace(/ /g, '+') : '' %>">
                  <button class="btn-edit">
                    <i class="fas fa-edit"></i> Editar
                  </button>
                </form>
              </div>
            </div>
          <% }); %>
      
        <% } else { %>
          <div class="panel-alert">
            No hay productos para mostrar.
          </div>
        <% } %>
      
        <!-- Botón eliminar -->
        <div class="panel-actions">
          <button id="delete-selected" class="btn-delete">
            Eliminar seleccionados
          </button>
        </div>
      </div>
    
  </main>

  <%- include ./layouts/footer.ejs %>
  <script src="/js/panelControl.js"></script> 
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script id="productos-data" type="application/json">
    <%- JSON.stringify(productos) %>
  </script>
  <script>
    const productosOriginales = JSON.parse(document.getElementById('productos-data').textContent);
  </script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const inputBusqueda = document.getElementById('entradaBusqueda');
      const busquedaActual = "<%= busquedaActual || '' %>";
      if (busquedaActual && inputBusqueda) {
        inputBusqueda.value = busquedaActual;
        inputBusqueda.dispatchEvent(new Event('input'));
      }
    });
  </script>
<script>
  const paginaActualDesdeServidor = "<%- JSON.stringify(paginaActual || 1) %>";
  const busquedaActualDesdeServidor = "<%- JSON.stringify(busquedaActual || '') %>";
</script>



</body>
