  <!-- ========= ESTILOS AISLADOS DEL PANEL (namespace .af-admin) ========= -->
<style>
/* ========================= ADMIN UI v3 (DESKTOP) ========================= */
/* Namespace: solo afecta dentro de <main class="... af-admin"> */
.af-admin{
  --brand:#1f487e;
  --brand2:#0f2f55;
  --accent:#d90429;

  --bg:#0b1220;
  --surface:rgba(255,255,255,.92);
  --card:#ffffff;

  --text:#0f172a;
  --muted:rgba(15,23,42,.65);

  --line:rgba(2,6,23,.10);
  --shadow:0 18px 45px rgba(2,6,23,.16);
  --shadow2:0 10px 26px rgba(2,6,23,.12);

  --r12:12px;
  --r16:16px;
  --r20:20px;

  --pad:14px;
  --gap:14px;

  background:
    radial-gradient(1100px 520px at 20% -10%, rgba(31,72,126,.35), transparent 60%),
    radial-gradient(900px 520px at 95% 10%, rgba(217,4,41,.18), transparent 55%),
    linear-gradient(180deg, #070b14 0%, #0b1220 100%);
  padding:22px;
  border-radius:20px;
  color:var(--text);
  font-size:14px;
}

/* Grid principal (compacto, sin ‚Äúbloques gigantes‚Äù) */
.af-admin .contenedor-admin-flex.af-admin__grid{
  display:grid !important;
  grid-template-columns: 320px 420px minmax(460px, 1fr);
  gap:var(--gap);
  align-items:start;
}

/* Barra superior (acciones globales) */
.af-admin .af-actions-row{
  grid-column:1 / -1;
  background: rgba(255,255,255,.10);
  border:1px solid rgba(255,255,255,.14);
  border-radius:18px;
  padding:10px 12px;
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:10px;
  box-shadow: 0 10px 26px rgba(2,6,23,.18);
  backdrop-filter: blur(10px);
}
.af-admin .af-actions-row a.btn{
  border-radius:999px !important;
}

/* Tarjetas */
.af-admin .af-card{
  background:var(--surface);
  border:1px solid rgba(255,255,255,.18);
  border-radius:var(--r20);
  box-shadow:var(--shadow);
  padding:var(--pad);
  overflow:hidden;
  position:relative;
  max-width:100%;
  backdrop-filter: blur(10px);
}

/* Encabezado de tarjeta (t√≠tulo + l√≠nea de color) */
.af-admin .af-card::before{
  content:"";
  position:absolute;
  left:0; right:0; top:0;
  height:3px;
  background:linear-gradient(90deg, rgba(31,72,126,.85), rgba(217,4,41,.55));
}

.af-admin .af-card__title{
  margin:0 0 12px 0;
  font-weight:950;
  color:rgba(255,255,255,.92);
  letter-spacing:.2px;
  font-size:1.03rem;
  display:flex;
  align-items:center;
  gap:10px;
  padding:10px 12px;
  border-radius:14px;
  background:linear-gradient(90deg, rgba(15,23,42,.92), rgba(2,6,23,.92));
  border:1px solid rgba(255,255,255,.12);
}

/* Ajustes por panel */
.af-admin .panel-proveedores{ grid-column:1; }
.af-admin .panel-facturas{ grid-column:2; }
.af-admin .panel-notas-credito{ grid-column:2; }
.af-admin .panel-presupuestos{ grid-column:3; }
.af-admin .panel-listados{ grid-column:3; }
.af-admin .panel-catalogos{ grid-column:1 / span 2; padding:0; }
.af-admin .panel-catalogos .af-card__title{ margin:14px 14px 0; }

/* Cat√°logos interno (compacto) */
.af-admin .af-catgrid{
  display:grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap:12px;
  padding:14px;
}
.af-admin .af-subcard{
  background:rgba(255,255,255,.92);
  border:1px solid rgba(2,6,23,.10);
  border-radius:16px;
  padding:12px;
  box-shadow: var(--shadow2);
}
.af-admin .af-subcard .af-card__title{
  margin:0 0 10px 0;
  padding:9px 10px;
  font-size:.95rem;
}

/* Formularios: label arriba y spacing consistente */
.af-admin .mb-3{ margin-bottom:12px !important; }
.af-admin .form-label{
  display:block;
  margin:0 0 6px 0;
  font-weight:900;
  color:rgba(255,255,255,.86);
  text-shadow:0 1px 0 rgba(2,6,23,.25);
}

/* Inputs */
.af-admin .form-control,
.af-admin .form-select{
  width:100%;
  border-radius:14px;
  border:1px solid rgba(2,6,23,.14);
  background:#fff;
  padding:10px 12px;
  line-height:1.15;
  outline:none;
  box-shadow:0 1px 0 rgba(2,6,23,.02);
}
.af-admin .form-control:focus,
.af-admin .form-select:focus{
  border-color:rgba(31,72,126,.55);
  box-shadow:0 0 0 4px rgba(31,72,126,.18);
}

/* Secciones: evitar ‚Äúbloques altos‚Äù */
.af-admin section.af-card .d-flex.justify-content-end{
  gap:10px;
}
.af-admin section.af-card button.btn{
  white-space:nowrap;
}

/* List group resultados: estilo app */
.af-admin #resultadosBusqueda,
.af-admin #resultadosBusquedaPresupuesto{
  border-radius:14px;
  overflow:hidden;
  border:1px solid rgba(2,6,23,.10);
  background:#fff;
  box-shadow:0 10px 20px rgba(2,6,23,.10);
}
.af-admin #resultadosBusqueda .list-group-item,
.af-admin #resultadosBusquedaPresupuesto .list-group-item{
  border:0;
  border-bottom:1px solid rgba(2,6,23,.08);
  padding:10px 12px;
}
.af-admin #resultadosBusqueda .list-group-item:last-child,
.af-admin #resultadosBusquedaPresupuesto .list-group-item:last-child{
  border-bottom:0;
}

/* Detalle proveedor (m√°s ‚Äúcard‚Äù y menos bloque suelto) */
.af-admin #detalleProveedor{
  margin-top:10px;
  padding:10px 12px;
  border-radius:14px;
  border:1px dashed rgba(31,72,126,.35);
  background:rgba(255,255,255,.92);
  color:rgba(2,6,23,.86);
}

/* Botones modernos */
.af-admin .btn{
  border-radius:999px;
  padding:10px 14px;
  font-weight:950;
  letter-spacing:.15px;
  border:1px solid transparent;
  transition:transform .12s ease, box-shadow .12s ease, filter .12s ease;
}
.af-admin .btn:hover{ transform:translateY(-1px); box-shadow:0 14px 26px rgba(2,6,23,.16); }
.af-admin .btn:active{ transform:translateY(0); box-shadow:none; }
.af-admin .btn-sm{ padding:8px 12px; }

.af-admin .btn-primary{
  background:linear-gradient(180deg, rgba(31,72,126,1), rgba(15,47,85,1));
  border-color:rgba(15,47,85,1);
}
.af-admin .btn-success{
  background:linear-gradient(180deg, #16a34a, #0f7a36);
  border-color:#0f7a36;
}
.af-admin .btn-warning{
  background:linear-gradient(180deg, #f59e0b, #d97706);
  border-color:#d97706;
  color:#111827;
}
.af-admin .btn-danger{
  background:linear-gradient(180deg, #ef4444, #b91c1c);
  border-color:#b91c1c;
}
.af-admin .btn-outline-primary{
  background:rgba(255,255,255,.92);
  border-color:rgba(31,72,126,.35);
  color:#0f2f55;
}
.af-admin .btn-outline-primary:hover{ background:rgba(31,72,126,.08); }
.af-admin .btn-outline-secondary{
  background:rgba(255,255,255,.92);
  border-color:rgba(2,6,23,.18);
  color:rgba(2,6,23,.78);
}

/* Botones ‚ÄúListados‚Äù */
.af-admin .btn-admin-facturas,
.af-admin .btn-admin-presupuestos,
.af-admin .btn-admin-vencimientos{
  width:100%;
  border-radius:16px;
  padding:12px 14px;
  font-weight:950;
  border:1px solid rgba(15,47,85,.22);
  background:linear-gradient(180deg, rgba(31,72,126,1), rgba(15,47,85,1));
  color:#fff;
}
.af-admin .btn-admin-facturas:hover,
.af-admin .btn-admin-presupuestos:hover,
.af-admin .btn-admin-vencimientos:hover{ filter:brightness(1.03); }

/* Toolbar proveedor */
.af-admin .acciones-proveedor{
  display:flex !important;
  gap:10px;
  flex-wrap:wrap;
  padding:10px;
  border-radius:16px;
  border:1px solid rgba(255,255,255,.18);
  background: rgba(255,255,255,.10);
  backdrop-filter: blur(10px);
}

/* Modales */
.af-admin .modal-content{
  border-radius:18px;
  border:1px solid rgba(15,23,42,.10);
  box-shadow:0 18px 50px rgba(2,6,23,.22);
  overflow:hidden;
}
.af-admin .modal-proveedor-header{
  background:linear-gradient(90deg, var(--brand), var(--brand2));
  color:#fff;
}
.af-admin .btn-close-white{ filter:invert(1); opacity:.95; }

/* Tablas dentro de modales */
.af-admin .table thead th{
  background:#f2f6ff;
  font-weight:950;
  color:rgba(15,23,42,.82);
}
.af-admin .table td,
.af-admin .table th{
  vertical-align:middle;
  padding:.55rem .65rem;
}

</style>

