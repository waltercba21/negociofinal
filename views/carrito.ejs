<%- include ./layouts/head.ejs %>
<%- include ./layouts/header.ejs %>

<body>
    <main class="carrito-container">
        <h1>üõçÔ∏è Mi Carrito</h1>
    
        <div id="carrito-productos">
            <% if (productos.length > 0) { %>
                <table class="carrito-tabla">
                    <thead>
                        <tr class="carrito-header">
                            <th>Imagen</th>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Sub-Total</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% productos.forEach(function(producto) { %>
                            <tr>
                                <td>
                                    <% if (producto.imagen) { %>
                                        <img src="/uploads/productos/<%= producto.imagen %>" alt="<%= producto.nombre %>" class="imagen-miniatura">
                                    <% } else { %>
                                        <img src="/uploads/default.jpg" alt="Imagen no disponible" class="imagen-miniatura">
                                    <% } %>
                                </td>
                                <td><%= producto.nombre %></td>
    
                                <td>
                                    <div class="cantidad-control">
                                        <button class="btn-cantidad disminuir" data-id="<%= producto.id %>">‚àí</button>
                                        <span><%= producto.cantidad %></span>
                                        <button class="btn-cantidad aumentar" data-id="<%= producto.id %>">+</button>
                                    </div>
                                </td>
    
                                <td>$<%= producto.precio_venta.toFixed(2) %></td>
                                <td>$<%= producto.total.toFixed(2) %></td>
    
                                <td>
                                    <button class="btn-eliminar" data-id="<%= producto.id %>">üóëÔ∏è Eliminar</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                    <tfoot>
                        <tr class="carrito-footer">
                            <td colspan="4"></td>
                            <td><strong>Total</strong></td>
                            <td id="total-carrito">$<%= total %></td> <!-- Total acumulado -->
                        </tr>
                    </tfoot>
                </table>
            <% } else { %>
                <p class="carrito-vacio">No tienes productos en tu carrito.</p>
            <% } %>
        </div>
    
        <div id="finalizar-compra">
            <a href="/carrito/finalizar" class="btn-finalizar">Finalizar Compra</a>
        </div>
    </main>
    
    
    
<%- include ./layouts/footer.ejs %>
<script src="/js/carrito.js"></script> 
</body>
