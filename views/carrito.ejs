<%- include('./layouts/head.ejs') %>
<%- include('./layouts/header.ejs') %>

<body>
    <main class="carrito-container">
        <h1>ğŸ›ï¸ Mi Carrito</h1>

        <% if (productos.length > 0) { %>
            <table class="carrito-tabla">
                <thead>
                    <tr>
                        <th>Imagen</th>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                        <th>Sub-Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(function(producto) { %>
                        <tr>
                            <td><img src="/uploads/productos/<%= producto.imagen || 'default.jpg' %>" class="imagen-miniatura"></td>
                            <td><%= producto.nombre %></td>
                            <td><%= producto.cantidad %></td>
                            <td>$<%= producto.precio_venta.toFixed(2) %></td>
                            <td>$<%= producto.total.toFixed(2) %></td>
                        </tr>
                    <% }) %>
                    <tr class="carrito-total">
                        <td colspan="3"></td>
                        <td><strong>Total</strong></td>
                        <td>$<%= total %></td>
                    </tr>
                </tbody>
            </table>
        <% } %>

        <% if (estadoCarrito) { %>
            <div class="estado-pedido">
                <h2>ğŸ“¦ Tu pedido estÃ¡ en proceso</h2>
                <p>Estado actual: <strong><%= estadoCarrito %></strong></p>
                <% if (estadoCarrito === "preparaciÃ³n") { %>
                    <p>ğŸ›’ Puedes pasar a retirarlo en nuestro local.</p>
                <% } else if (estadoCarrito === "listo para entrega") { %>
                    <p>ğŸšš En breve recibirÃ¡s tu pedido en tu domicilio.</p>
                <% } %>
            </div>
        <% } else { %>
            <p class="carrito-vacio">No tienes productos en tu carrito.</p>
        <% } %>

        <% if (typeof comprobante !== 'undefined' && comprobante) { %>
            <div class="comprobante-container">
                <a href="/comprobantes/<%= comprobante %>" download class="btn-finalizar">ğŸ“„ Descargar Comprobante</a>
            </div>
        <% } %>
    </main>
    <script src="/js/carrito.js"></script> 
    <%- include('./layouts/footer.ejs') %>
</body>
