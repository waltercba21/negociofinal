<%- include ./layouts/head.ejs %>
<%- include ./layouts/header.ejs %>
<body>
  <main>
    <h1>Productos Actualizados</h1>
    <table>
      <thead>
        <tr>
          <th>Código</th>
          <th>Nombre</th>
          <th>Precio Lista Viejo</th>
          <th>Precio Lista Nuevo</th>
          <th>Precio De Venta</th>
          <th>Diferencia</th>
          <th>Modificación</th>
        </tr>
      </thead>
      <tbody>
        <% productos.forEach(p => {
          let viejo = parseFloat(p.precio_lista_antiguo || 0);
          let nuevo = parseFloat(p.precio_lista_nuevo || 0);
          let diferencia = viejo > 0 ? (((nuevo - viejo) / viejo) * 100).toFixed(2) : '0.00';
          let clase = diferencia > 0 ? 'positivo' : (diferencia < 0 ? 'negativo' : 'neutro');
        %>
        <tr>
          <td><%= p.codigo %></td>
          <td><%= p.nombre %></td>
          <td>$<%= viejo.toLocaleString('es-AR') %></td>
          <td>$<%= nuevo.toLocaleString('es-AR') %></td>
          <td>$<%= parseFloat(p.precio_venta || 0).toLocaleString('es-AR') %></td>
          <td class="<%= clase %>"><%= diferencia %> %</td>
          <td><%= p.sin_cambio ? 'NO MODIFICA' : 'MODIFICA' %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <p>Total: <%= productos.length %> producto(s)</p>
  </main>
  <script src="/js/profile.js"></script>
  <%- include ./layouts/footer.ejs %>
</body>
