<%- include('./layouts/head.ejs') %>
<%- include('./layouts/header.ejs') %>
<body>
    <main class="factura-main">
        <p class="factura-proveedor">Proveedor: <%= factura.nombre_proveedor %></p>
        <p class="factura-fecha">Fecha de Factura: <%= factura.fecha %></p>
        <p class="factura-numero">Número de Factura: <%= factura.numero_factura %></p>
        <p class="factura-fecha-pago">Fecha de Pago: <%= factura.fecha_pago %></p>
        <p class="factura-importe">Importe: <%= factura.importe %></p>
        <p class="factura-condicion">Condición: <%= factura.condicion %></p>
        <h3 class="factura-titulo-productos">Productos en la Factura</h3>
        <table class="factura-productos-table">
            <thead>
                <tr>
                    <th>Nombre del Producto</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            <tbody>
                <% productos.forEach(function(producto) { %>
                    <tr>
                        <td><%= producto.nombre_producto %></td>
                        <td><%= producto.cantidad %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <button class="factura-volver-btn" onclick="history.back()">Volver</button>
    </main>
</body>
<%- include('./layouts/footer.ejs') %>
