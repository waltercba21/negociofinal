<%- include ./layouts/head.ejs %>
<%- include ./layouts/header.ejs %>
<style>
  .container-modificar {
    width: 80%;
    margin: auto;
  }
  .container-modificar form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .container-modificar label, input, select {
    margin: 10px 0;
    font-weight: bold;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.75);
  }
  .container-modificar .btn {
    background-color: #007BFF;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.75);
  }
  .container-modificar .btn:hover {
    background-color: #0056b3;
  }
  </style>
<body>
 <main>
<div class="container-modificar"> 
    <br/>
    <br/>
    <form action="/productos/modificarPorProveedor" method="GET">
      <label for="proveedor">Seleccione un proveedor:</label>
      <select name="proveedor" id="proveedor">
          <option value="">-- Seleccione --</option>
          <% proveedores.forEach(function(proveedor) { %>
              <option value='<%= proveedor.id %>'><%= proveedor.nombre %></option>
          <% }); %>
      </select>  
      <input type="submit" value="Ver productos">
  </form>
    <br/>
    <form method="post" action="/productos/actualizarPorProveedor">
      <% if (proveedor) { %>
        <input type="hidden" name="proveedor" value="<%= proveedor.id %>">
        <label for="porcentaje">Porcentaje de cambio:</label>
        <input type="number" id="porcentaje" name="porcentaje" min="0" max="100" step="0.01" required style="text-align: right;">
        <span>%</span>
        <label for="tipoCambio">Tipo de cambio:</label>
        <select name="tipoCambio" id="tipoCambio">
            <option value="aumento">Aumento</option>
            <option value="descuento">Descuento</option>
        </select>
        <button type="submit" class="btn btn-primary">OK</button>
      <% } %>
    </form>
    <br/>
    <br/>
    <table class="table table-light">
    <thead class="thead-light">
      <tr>
        <th>#</th>
        <th>Nombre</th>
        <th>Imagen</th>
        <th>CÃ³digo</th>
        <th>Precio</th> 
        
      </tr>
    </thead>
    <tbody>
        <% for( let producto = 0; producto< productos.length; producto++ ) { %>
          <tr>
            <td><%= productos[producto].id %></td> 
            <td><%= productos[producto].nombre %></td>
            <td>
              <img class="img-thumbnail" width= '150' src="/uploads/productos/<%= productos[producto].imagen %>" alt="">
            </td>
            <td><%= productos[producto].codigo %></td>
            <td>
              <form action="/productos/actualizarPrecio" method="post">
                <input type="hidden" name="id" value="<%= productos[producto].id %>">
                <input type="hidden" name="proveedor" value="<%= proveedor.id %>">
                <input type="number" name="precio" value="<%= productos[producto].precio %>">
                <button type="submit">Guardar</button>
            </form>
            </td> 
          </tr>
        <% } %>
    </tbody>
  </table>
</div>
</main>
<%- include ./layouts/footer.ejs %>
</body>