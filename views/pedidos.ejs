<%- include('./layouts/head.ejs') %>
<%- include('./layouts/header.ejs') %>

<body>
  <main class="admin-container">
    <h1>üì¶ Pedidos Pendientes</h1>

    <table class="pedidos-tabla">
      <thead>
        <tr>
          <th>ID Pedido</th>
          <th>Cliente</th>
          <th>Total</th>
          <th>Tipo de Env√≠o</th>
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if (typeof pedidos !== "undefined" && pedidos.length > 0) { %>
          <% pedidos.forEach(function(pedido) { %>
            <tr>
              <td><%= pedido.id_pedido %></td>
              <td><%= pedido.cliente %></td>
              <td>$<%= pedido.total %></td>
              <td><%= pedido.tipo_envio %></td>
              <td><%= pedido.estado %></td>
              <td>
                <button onclick="marcarPreparado('<%= pedido.id_pedido %>')">üõ† Preparar</button>
                <button onclick="finalizarPedido('<%= pedido.id_pedido %>')">‚úÖ Finalizar</button>
            </td>
            
            </tr>
          <% }); %>
        <% } else { %>
          <tr><td colspan="6">‚ùå No hay pedidos pendientes.</td></tr>
        <% } %>
      </tbody>
    </table>
  </main>

  <%- include('./layouts/footer.ejs') %>
  <script>
    async function obtenerPedidos() {
        try {
            const response = await fetch('/pedidos');  
            const pedidos = await response.json();
            console.log("üîç Pedidos obtenidos en el frontend:", pedidos); 

            if (pedidos.length > 0) {
                let pedidosHTML = "";
                pedidos.forEach(pedido => {
                    pedidosHTML += `
                        <tr>
                            <td>${pedido.id_pedido}</td>
                            <td>${pedido.cliente}</td>
                            <td>$${pedido.total}</td>
                            <td>${pedido.tipo_envio}</td>
                            <td>${pedido.estado}</td>
                            <td>
                                <button onclick="marcarPreparado(${pedido.id_pedido})">üõ† Preparar</button>
                                <button onclick="finalizarPedido(${pedido.id_pedido})">‚úÖ Finalizar</button>
                            </td>
                        </tr>
                    `;
                });
                document.querySelector("tbody").innerHTML = pedidosHTML;
            } else {
                document.querySelector("tbody").innerHTML = "<tr><td colspan='6'>No hay pedidos pendientes.</td></tr>";
            }
        } catch (error) {
            console.error("‚ùå Error al cargar pedidos:", error);
        }
    }

    async function marcarPreparado(id) {
        await fetch(`/pedidos/marcar-preparado/${id}`, { method: 'POST' });
        obtenerPedidos();
    }

    async function finalizarPedido(id) {
        await fetch(`/pedidos/finalizar/${id}`, { method: 'POST' });
        obtenerPedidos();
    }

    obtenerPedidos();
  </script>
</body>
